<div class="row px-4 px-lg-3 pb-4">
  <div class="col-lg-3 bold text-lg-right my-auto">
    {{ this.args.label }}
    {%- if this.args.description %}
      <sup><i class="fa fa-question-circle ml-1" data-toggle="tooltip" title="" data-original-title="{{ this.args.description }}"></i></sup>
    {% endif -%}:
  </div>
  <div class="col-lg-6 pt-2 pt-lg-0">
    <div class="custom-file" dropzone="copy">
      <input
        type="file"
        class="custom-file-input"
        id="{{ this.args.name }}"
        name="{{ this.args.name }}"
      />
      <label class="custom-file-label" for="{{ this.args.name }}">Choose file</label>
    </div>
    {% if this.args.examples %}
    <ul style="list-style-type: none">
      <span>Load example:</span>
      {% for example_name, example_url in this.args.examples.items() %}
        <li style="display: inline">&nbsp;<a href="javascript:load_file('{{ this.args.name }}', '{{ example_url }}', '{{ example_name }}')">{{ example_name }}</a>&nbsp;</li>
      {% endfor %}
    <ul>
    {% endif %}
  </div>
</div>