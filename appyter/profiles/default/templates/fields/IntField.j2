    <div class="form-group">
        <p>{{ this.args.description }}</p>
        <label for="{{ this.args.name }}">
            {{ this.args.label }}
        </label>
        <div class="input-group spinner" min={{ this.args.min }} max={{ this.args.max }}>
            <input type="text" name="{{ this.args.name }}" class="form-control" value="{{ this.args.default }}">
