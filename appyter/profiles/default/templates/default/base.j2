<!DOCTYPE html>
<html>
<head>
  {% block head %}
    <title>Appyter</title>
  {% endblock %}
  {% block style %}
  <style>
  .progress {
    height: 25px;
    width: 100%;
    background-color: grey;
  }
  .progress-bar {
    height: 100%;
    background-color: blue;
  }
  .progress-bar.bg-success {
    height: 100%;
    background-color: green;
  }
  </style>
  {% endblock %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.6/require.min.js"></script>
</head>
<body>
  {% block body %}{% endblock %}
  {% block script %}
    <script>
      require.config({
        paths: {
          'jquery': 'https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min',
          'socketio': 'https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.slim',
          'socketio-file-upload': 'https://cdn.jsdelivr.net/npm/socketio-file-upload@0.7.0/client.min',
        },
        shim: {
          'socketio': {
            exports: 'io'
          },
          'socketio-file-upload': {
            exports: 'SocketIOFileUpload'
          },
        }
      })
    </script>
    <script>
      define('socket', ['socketio'], function (io) {
        return io({ path: '{{ _prefix }}socket.io' })
      })
    </script>
    {% if _debug %}
    <script>
      require(['socket'], function (socket) {
        var first_connect = true
        socket.on('connect', function () {
          if (first_connect === true) {
            console.debug('connected')
            socket.emit('session', { _session: '{{ _session }}' })
            first_connect = false
          } else {
            window.location.reload()
          }
        })
      })
    </script>
    {% else %}
    <script>
      require(['socket'], function (socket) {
        socket.on('connect', function () {
        socket.emit('session', { _session: '{{ _session }}' })
      })
    </script>
    {% endif %}
  {% endblock %}
</body>
</html>